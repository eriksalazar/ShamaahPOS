@model ShamaahPOS.Models.DailyCorporationServiceViewModel

@{
    ViewBag.Title = "Details";
}
@using (Html.BeginForm())
{
    @*@Html.AntiForgeryToken()*@

    <div class="form-horizontal">
        <h2>Daily Income Report for @ViewBag.serviceDate</h2>
        <hr />
        @Html.ValidationSummary(true)
        <div>
            @Html.ActionLink("Back to Summary List", "Index")
        </div>
        <div class="list-group well">
            <div class="list-group-item" data-bind="foreach:dailyCorporationCashDrawers">
                <div class="row">
                    <div class="hidden">
                        <span data-bind="value: dailyCorporationCashDrawerId" />
                    </div>
                    <div class="pull-right" data-bind="if: IsSaving()">Saving...</div>
                    <div class="col-md-3 pull-right">
                        <input class="text-right" data-bind="numeric: cashDrawerAmount, value:cashDrawerAmount, valueUpdate: 'afterkeydown'" />
                    </div>
                    <div class="col-md-2 pull-right">
                        <h4 class="list-group-item-heading">
                            <span data-bind="text: cashDrawerTypeName"></span>
                        </h4>
                    </div>
                </div>
            </div>
        </div>

        <div class="list-group well">
            <div class="list-group-item">
                <div class="row">
                    <div class="col-md-2 text-center">
                        <h4 class="list-group-item-heading">
                            <span>Company Name</span>
                        </h4>
                    </div>
                    <div class="col-md-2  text-center">
                        <h4 class="list-group-item-heading">
                            <span>Cash Money Transfers</span>
                        </h4>
                    </div>
                    <div class="col-md-2 text-center">
                        <h4 class="list-group-item-heading">
                            <span>Company Commission</span>
                        </h4>
                    </div>
                    <div class="col-md-1 text-center">
                        <h4 class="list-group-item-heading">
                            <span>Total Company</span>
                        </h4>
                    </div>
                    <div class="col-md-2 text-center">
                        <h4 class="list-group-item-heading">
                            <span>Shamaah Commission</span>
                        </h4>
                    </div>
                    <div class="col-md-2 text-right">
                        <h4 class="list-group-item-heading">
                            <span>Total</span>
                        </h4>
                    </div>
                </div>
            </div>


            <div class="list-group-item " data-bind="foreach:dailyIncomes">
                <div class="row">
                    <div class="hidden">
                        <span data-bind="value: DailyCompanyServiceIncomeId" />
                    </div>
                    <div class="col-md-2" data-bind="visible: CompanyServiceProvidedId() !=null">
                        <h5 class="list-group-item-heading">
                            <span data-bind="text: CompanyServiceProvidedName" />
                        </h5>
                    </div>
                    <div class="col-md-2" data-bind="visible: CompanyServiceProvidedId() ==null">

                        <input data-bind="value: ManualCompanyServiceName" />

                    </div>
                    <div class="col-md-2">

                        <input data-bind="numeric: IncomeAmount, value:IncomeAmount, valueUpdate: 'afterkeydown'" class="text-right" />

                    </div>
                    <div class="col-md-2">
                        <input data-bind="numeric: DailyCompanyCommission, value: DailyCompanyCommission, valueUpdate: 'afterkeydown'" class="text-right" />


                    </div>
                    <div class="col-md-1 text-right">
                        <span data-bind="text: formatCurrency(DailyCompanyIncomeTotal())" />
                    </div>
                    <div class="col-md-2">
                        <input data-bind="numeric:DailyCorporationCommission, value: DailyCorporationCommission, valueUpdate: 'afterkeydown'" class="text-right" />
                    </div>
                    <div class="col-md-2 text-right">
                        <span data-bind="text: formatCurrency(DailyCorporationIncomeTotal())" />
                    </div>
                    <div data-bind="if: IsSaving()" class="">Saving...</div>
                    <div class="col-md-1" data-bind="visible: CompanyServiceProvidedId() ==null">

                        <a href="#" data-bind="click: $parent.removeDailyIncome">Remove</a>

                    </div>
                </div>
            </div>
            <div class="list-group-item">
                <div class="row">
                    <div class="col-md-2">
                        <h4 class="list-group-item-heading">
                            <span>Total</span>
                        </h4>
                    </div>
                    <div class="col-md-2 text-right">
                        <h5 class="list-group-item-heading">
                            <span data-bind="text: formatCurrency(IncomeAmountGrandTotal())" />
                        </h5>
                    </div>
                    <div class="col-md-2 text-right">
                        <h5 class="list-group-item-heading">
                            <span data-bind="text: formatCurrency(CommissionCompanyAmountGrandTotal())" />
                        </h5>
                    </div>
                    <div class="col-md-1 text-right">
                        <h5 class="list-group-item-heading">
                            <span data-bind="text: formatCurrency(CompanyAmountGrandTotal())" />
                        </h5>
                    </div>
                    <div class="col-md-2 text-right">
                        <h5 class="list-group-item-heading">
                            <span data-bind="text: formatCurrency(CommissionCorporationAmountGrandTotal())" />
                        </h5>
                    </div>
                    <div class="col-md-2 text-right">
                        <h5 class=" list-group-item-heading">
                            <span data-bind="text: formatCurrency(transferGrandTotal())" />
                        </h5>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-5 col-md-10">
                    @*<button data-bind="click: save" class="btn btn-default">Save</button>*@
                    <button data-bind="click: addDailyIncome" class="btn btn-default">Add New</button>
                    <button data-bind="click: reset" class="btn btn-default">Reset</button>
                </div>
            </div>
        </div>


        <div class="list-group well">
            <div class="list-group-item">
                <div class="row">
                    <div class="col-md-5 ">
                        <h4 class="list-group-item-heading">
                            <span>Other Services</span>
                        </h4>
                    </div>
                    <div class="col-md-2 text-center">
                        <h4 class="list-group-item-heading">
                            <span>Amount</span>
                        </h4>
                    </div>
                    <div class="col-md-2 text-center">
                        <h4 class="list-group-item-heading">
                            <span>Commission Amount</span>
                        </h4>
                    </div>
                    <div class="col-md-2 text-right">
                        <h4 class="list-group-item-heading">
                            <span>Total</span>
                        </h4>
                    </div>

                </div>
            </div>
            <div class="list-group-item" data-bind="foreach:dailyCorporationIncomes">
                <div class="row">
                    <div class="hidden">
                        <span data-bind="value: dailyCorporationServiceIncomeId" />
                    </div>
                    <div class="col-md-5 ">
                        <h5 class="list-group-item-heading">
                            <span data-bind="text: corporationServiceProvidedName"></span>
                        </h5>
                    </div>
                    <div class="col-md-2 text-right" data-bind="visible: corporationServiceProvidedId() ==7 ">
                        <input data-bind="numeric: incomeAmount, value:incomeAmount, valueUpdate: 'afterkeydown'" class="text-right" />
                    </div>
                    <div class="col-md-2" data-bind="visible: corporationServiceProvidedId() !=7 ">

                    </div>
                    <div class="col-md-2 text-right">
                        <input data-bind="numeric: dailyCorporationCommission, value:dailyCorporationCommission, valueUpdate: 'afterkeydown'" class="text-right" />
                    </div>
                    <div class="col-md-2 text-right">
                        <span data-bind="text: formatCurrency(dailyCorporationIncomeTotal())" />
                    </div>
                    <div data-bind="if: IsSaving()" class="">Saving...</div>
                </div>
            </div>
            <div class="list-group-item">
                <div class="row">
                    <div class="col-md-5 ">
                        <h4 class="list-group-item-heading">
                            <span>Total</span>
                        </h4>
                    </div>
                    <div class="col-md-2 text-right">
                        <h5 class="list-group-item-heading">
                            <span data-bind="text: formatCurrency(corporationIncomeAmountGrandTotal())" />
                        </h5>
                    </div>
                    <div class="col-md-2 text-right">
                        <h5 class="list-group-item-heading">
                            <span data-bind="text: formatCurrency(corporationCommissionAmountGrandTotal())" />
                        </h5>
                    </div>
                    <div class="col-md-2 text-right">
                        <h5 class="list-group-item-heading">
                            <span data-bind="text: formatCurrency(corporationGrandTotal())" />
                        </h5>
                    </div>
                </div>
            </div>
        </div>
        <div class="list-group well">
            <div class="list-group-item">
                <div class="row">
                    <div class="col-md-5 ">
                        <h4 class="list-group-item-heading">
                            <span>Payouts</span>
                        </h4>
                    </div>
                    <div class="col-md-2 text-center">
                        <h4 class="list-group-item-heading">
                            <span>Amount</span>
                        </h4>
                    </div>
                    <div class="col-md-2 text-center">
                        <h4 class="list-group-item-heading">
                            <span>Commission Amount</span>
                        </h4>
                    </div>
                    <div class="col-md-2 text-right">
                        <h4 class="list-group-item-heading">
                            <span>Total</span>
                        </h4>
                    </div>

                </div>
            </div>
            <div class="list-group-item">
                <div class="row">
                    <div class="col-md-5 ">
                        <h4 class="list-group-item-heading">
                            <a href="#myPayoutModal" data-toggle="modal">Payouts</a>
                        </h4>
                    </div>
                    <div class="col-md-2 text-right">
                        <h5 class="list-group-item-heading">
                            <span data-bind="text: formatCurrency(payoutIncomeAmountGrandTotal())" />
                        </h5>
                    </div>
                    <div class="col-md-2 text-right">
                        <h5 class="list-group-item-heading">
                            <span data-bind="text: formatCurrency(payoutCommissionCorporationAmountGrandTotal())" />
                        </h5>
                    </div>
                    <div class="col-md-2 text-right">
                        <h5 class="list-group-item-heading">
                            <span data-bind="text: formatCurrency(payoutGrandTotal())" />
                        </h5>
                    </div>

                </div>
            </div>
        </div>
        <div class="list-group well" id="divWithdrawals">
            <div class="list-group-item">
                <div class="row">
                    <div class="col-md-5 ">
                        <h4 class="list-group-item-heading">
                            <span>Withdrawals</span>
                        </h4>
                    </div>
                    <div class="col-md-2 text-center">
                        <h4 class="list-group-item-heading">
                            <span>Note</span>
                        </h4>
                    </div>
                    <div class="col-md-2 text-center">
                        <h4 class="list-group-item-heading">
                            <span>Amount</span>
                        </h4>
                    </div>
                    <div class="col-md-2 text-right">
                        <h4 class="list-group-item-heading">
                            <span>Total</span>
                        </h4>
                    </div>

                </div>
            </div>
            <div class="list-group-item">


                <div data-bind="foreach: dailyCorporationWithdrawals">
                    <div class="row">
                        <div class="hidden">
                            <span data-bind="value: dailyCorporationWithdrawalId" />
                        </div>
                        <div class="col-md-5 ">
                            <h5 class="list-group-item-heading">
                                <span data-bind="text: withdrawalTypeName"></span>
                            </h5>
                        </div>
                        <div class="col-md-2">
                            <input data-bind="value: withdrawalDescription, valueUpdate: 'afterkeydown'" />
                        </div>
                        <div class="col-md-2 text-right">
                            <input class="text-right" data-bind="numeric: withdrawalAmount, value:withdrawalAmount, valueUpdate: 'afterkeydown'" />
                        </div>

                        <div class="col-md-2 text-right">
                            <span data-bind="text: formatCurrency(withdrawalAmountTotal())" />
                        </div>
                        <div data-bind="if: IsSaving()" class="">Saving...</div>

                    </div>
                </div>

            </div>
            <div class="list-group-item">
                <div class="row">
                    <div class="col-md-5 ">
                        <h4 class="list-group-item-heading">
                            <span>Total</span>
                        </h4>
                    </div>
                    <div class="col-md-2"></div>
                    <div class="col-md-2 text-right">
                        <h5 class="list-group-item-heading">
                            <span class="text-right" data-bind="text: formatCurrency(corporationWithdrawalAmountGrandTotal())" />
                        </h5>
                    </div>
                    <div class="col-md-2 text-right">
                        <h5 class="list-group-item-heading">
                            <span class="text-right" data-bind="text: formatCurrency(corporationWithdrawalAmountGrandTotal())" />
                        </h5>
                    </div>

                </div>
            </div>
        </div>
        <div class="list-group well" id="divExpenses">
            <div class="list-group-item">
                <div class="row">
                    <div class="col-md-7 ">
                        <h4 class="list-group-item-heading">
                            <span>Expenses and Debits</span>
                        </h4>
                    </div>

                    <div class="col-md-2 text-center">
                        <h4 class="list-group-item-heading">
                            <span>Amount</span>
                        </h4>
                    </div>
                    <div class="col-md-2 text-right">
                        <h4 class="list-group-item-heading">
                            <span>Total</span>
                        </h4>
                    </div>

                </div>
            </div>
            <div class="list-group-item" data-bind="foreach: dailyCorporationExpenses">
                <div class="row">
                    <div class="hidden">
                        <span data-bind="value: dailyCorporationExpenseId" />
                    </div>
                    <div class="col-md-7 ">
                        <h5 class="list-group-item-heading" data-bind="if: expenseTypeId() !=2">
                            <span data-bind="text: expenseTypeName"></span>
                        </h5>
                        <div data-bind="if: expenseTypeId() ==2 || dailyCorporationExpenseId() ==null">
                            <input data-bind="value: expenseDescription, valueUpdate: 'afterkeydown'" />
                        </div>
                    </div>

                    <div class="col-md-2 text-right">
                        <input class="text-right" data-bind="numeric: expenseAmount, value:expenseAmount, valueUpdate: 'afterkeydown'" />
                    </div>

                    <div class="col-md-2 text-right">
                        <span data-bind="text: formatCurrency(expenseAmountTotal())" />
                    </div>
                    <div data-bind="if: IsSaving()" class="">Saving...</div>
                    <div class="col-md-1" data-bind="visible: expenseTypeId() ==2">

                        <a href="#" data-bind="click: $parent.removeDailyOtherExpense">Remove</a>

                    </div>
                </div>


            </div>
            <div class="list-group-item">
                <div class="row">
                    <div class="col-md-7 ">
                        <h4 class="list-group-item-heading">
                            <span>Total</span>
                        </h4>
                    </div>

                    <div class="col-md-2 text-right">
                        <h5 class="list-group-item-heading">
                            <span class="text-right" data-bind="text: formatCurrency(corporationExpenseAmountGrandTotal())" />
                        </h5>
                    </div>
                    <div class="col-md-2 text-right">
                        <h5 class="list-group-item-heading">
                            <span class="text-right" data-bind="text: formatCurrency(corporationExpenseAmountGrandTotal())" />
                        </h5>
                    </div>

                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-5 col-md-10">
                    <button data-bind="click: addDailyOtherExpense" class="btn btn-default">Add New Expense</button>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-9 text-right ">
                <h2 class="list-group-item-heading">
                    <span>Total Due Cash</span>
                </h2>
            </div>
            <div class="col-md-2 text-right">
                <h2 class=" list-group-item-heading">
                    <span data-bind="text: formatCurrency(transferGrandTotal()+corporationGrandTotal()+corporationCashDrawerAmountGrandTotal()+payoutCommissionCorporationAmountGrandTotal()-(corporationWithdrawalAmountGrandTotal()+payoutIncomeAmountGrandTotal()+corporationExpenseAmountGrandTotal()))" />
                </h2>
            </div>
        </div>

        <div class="list-group well" id="divReconciliation">
            <div class="list-group-item">
                <div class="row bg-danger">
                    <div class="col-md-9 ">
                        <h4 class="list-group-item-heading">
                            <span class="alert-warning">Reconciliation per Denomination</span>
                        </h4>
                    </div>
                    <div class="col-md-2  text-right">
                        <h4 class="list-group-item-heading">
                            <span class="alert-warning">Total</span>
                        </h4>
                    </div>


                </div>
            </div>
            <div class="list-group-item" data-bind="foreach: dailyCorporationReconciliations">
                <div class="row">
                    <div class="hidden">
                        <span data-bind="value: dailyCorporationReconciliationId" />
                    </div>
                    <div class="col-md-9 ">
                        <h5 class="list-group-item-heading">
                            <span data-bind="text: denominationTypeName"></span>
                        </h5>
                    </div>
                    <div class="col-md-2">
                        <input class="text-right" data-bind="numeric: reconciliationAmount, value: reconciliationAmount, valueUpdate: 'afterkeydown'" />
                    </div>
                    <div data-bind="if: IsSaving()" class="">Saving...</div>
                </div>
            </div>
            <div class="list-group-item">
                <div class="row">
                    <div class="col-md-9">
                        <h4 class="list-group-item-heading">
                            <span>Total</span>
                        </h4>
                    </div>
                    <div class="col-md-2 text-right">
                        <span class="text-right" data-bind="text: formatCurrency(corporationReconciliationAmountGrandTotal())" />
                    </div>

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-9 text-right ">
                <h2 class="list-group-item-heading">
                    <span>Total Existing Cash</span>
                </h2>
            </div>
            <div class="col-md-2 text-right">
                <h2 class=" list-group-item-heading">
                    <span data-bind="text: formatCurrency(corporationReconciliationAmountGrandTotal())" />
                </h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-9 text-right ">
                <h2 class="list-group-item-heading">
                    <span>Cash Difference</span>
                </h2>
            </div>
            <div class="col-md-2 text-right">
                <h2 class=" list-group-item-heading">
                    <span data-bind="text: formatCurrency(corporationReconciliationAmountGrandTotal() - (transferGrandTotal()+corporationGrandTotal()+corporationCashDrawerAmountGrandTotal()+payoutCommissionCorporationAmountGrandTotal()-(corporationWithdrawalAmountGrandTotal()+payoutIncomeAmountGrandTotal()+corporationExpenseAmountGrandTotal())))" />
                </h2>
            </div>
        </div>
        <div class="modal fade" id="myPayoutModal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                        <h4 class="modal-title">Payouts</h4>
                    </div>
                    <div class="modal-body">
                        <div class="list-group-item">
                            <div class="row">
                                <div class="col-md-4 ">
                                    <h4 class="list-group-item-heading">
                                        <span>Payout Company</span>
                                    </h4>
                                </div>
                                <div class="col-md-3">
                                    <h4 class="list-group-item-heading">
                                        <span>Amount</span>
                                    </h4>
                                </div>
                                <div class="col-md-3">
                                    <h4 class="list-group-item-heading">
                                        <span>Commission</span>
                                    </h4>
                                </div>
                                <div class="col-md-2">
                                    <h4 class="list-group-item-heading">
                                        <span>Total</span>
                                    </h4>
                                </div>
                            </div>
                        </div>
                        <div class="list-group-item" data-bind="foreach: dailyCompanyPayouts">
                            <div class="row">
                                <div class="hidden">
                                    <span data-bind="value: DailyCompanyServiceIncomeId" />
                                </div>
                                <div class="col-md-4 ">
                                    <h5 class="list-group-item-heading">
                                        <span data-bind="text: CompanyServiceProvidedName" />
                                    </h5>
                                </div>
                                <div class="col-md-3">
                                    <input style="width:100px" data-bind="numeric: IncomeAmount, value:IncomeAmount, valueUpdate: 'afterkeydown'" class="text-right" />
                                </div>
                                <div class="col-md-3">
                                    <input style="width:100px" data-bind="numeric:DailyCorporationCommission, value: DailyCorporationCommission, valueUpdate: 'afterkeydown'" class="text-right" />
                                </div>
                                <div class="col-md-2 text-right">
                                    <span data-bind="text: formatCurrency(DailyCorporationIncomeTotal())" />
                                </div>
                                <div data-bind="if: IsSaving()" class="">Saving...</div>
                            </div>
                        </div>

                        <div class="list-group-item">
                            <div class="row">
                                <div class="col-md-4">
                                    <h4 class="list-group-item-heading">
                                        <span>Total</span>
                                    </h4>
                                </div>
                                <div class="col-md-3 text-right">
                                    <h5 class="list-group-item-heading">
                                        <span data-bind="text: formatCurrency(payoutIncomeAmountGrandTotal())" />
                                    </h5>
                                </div>
                                <div class="col-md-3 text-right">
                                    <h5 class="list-group-item-heading">
                                        <span data-bind="text: formatCurrency(payoutCommissionCorporationAmountGrandTotal())" />
                                    </h5>
                                </div>
                                <div class="col-md-2 text-right">
                                    <h5 class=" list-group-item-heading">
                                        <span data-bind="text: formatCurrency(payoutGrandTotal())" />
                                    </h5>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        @*<button type="button" class="btn btn-primary">Save changes</button>*@
                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->

    </div>


}

<div>
    @Html.ActionLink("Back to Summary List", "Index")
</div>

